.hand
    text-align: center;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    white-space: nowrap;
    
    &.dealer
        top: 0;
        
        [data-card]
            &:nth-child(1)
                z-index: 10;
            &:nth-child(2)   
                z-index: 9;
            &:nth-child(3)
                z-index: 8;
            &:nth-child(4)   
                z-index: 7;
            &:nth-child(5)
                z-index: 6;
            &:nth-child(6)   
                z-index: 5;
    
    &.player
        bottom: 90px;
        
    &.dealer
        top: 30px;
    
    [data-card]
        transition: margin-left 300ms 50ms ease;
        
    [data-card] + [data-card],
    .flip-card-container + [data-card]
        margin-left: - round(card_w / 1.4);
            
    &:hover
        [data-card] + [data-card],
        .flip-card-container + [data-card]
            margin-left: - round(card_w / 2);
        
        .indicator
            display: inline-block;
                
    .cards
        padding: card_gutter * 2;